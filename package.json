{
  "name": "hermes",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve hermes --live-reload=false -o --host=0.0.0.0",
    "serve:editor": "ng serve hermes-editor --live-reload=false -o --host=0.0.0.0",
    "switch:nhavaxe": "cp projects/hermes-editor/src/environments/nhavaxe.conf.ts projects/hermes-editor/src/environments/enviroment.conf.ts",
    "switch:baodoisong": "cp projects/hermes-editor/src/environments/baodoisong.conf.ts projects/hermes-editor/src/environments/enviroment.conf.ts",
    "build": "ng build hermes --prod",
    "build:editor": "ng build hermes-editor --prod",
    "deploy:baodoisong": "cp firebase.hermes.json firebase.json && firebase deploy -P default",
    "deploy:baodoisong-editor": "cp firebase.editor.json firebase.json && firebase deploy -P editor",
    "deploy:nhavaxe-publish": "cp firebase.hermes.json firebase.json && firebase deploy -P nhavaxe-publish",
    "deploy:nhavaxe-editor": "cp firebase.editor.json firebase.json && firebase deploy -P nhavaxe-editor",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.1",
    "@angular/cdk": "^6.4.2",
    "@angular/common": "^6.1.1",
    "@angular/compiler": "^6.1.1",
    "@angular/core": "^6.1.1",
    "@angular/elements": "^6.1.1",
    "@angular/forms": "^6.1.1",
    "@angular/http": "^6.1.1",
    "@angular/material": "^6.4.2",
    "@angular/platform-browser": "^6.1.1",
    "@angular/platform-browser-dynamic": "^6.1.1",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.1.1",
    "@angular/service-worker": "^6.1.1",
    "angularfire2": "^5.0.0-rc.11",
    "core-js": "^2.5.7",
    "firebase": "^5.3.1",
    "ngx-quill": "^3.4.0",
    "quill": "^1.3.6",
    "rxjs": "^6.2.2",
    "screenfull": "^3.3.2",
    "smoothscroll-polyfill": "^0.4.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "^6.1.2",
    "@angular/compiler-cli": "^6.1.1",
    "@angular/language-service": "^6.1.1",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.3",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^3.0.6",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tsickle": "^0.32.1",
    "tslib": "^1.9.3",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
